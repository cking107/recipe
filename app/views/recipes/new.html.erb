<h1>New Recipe</h1>
<%= form_for :recipe, url: recipes_path do |f| %>
  <p>
    <%= f.label :meal, 'Meal:' %><br>
    <%= f.text_field :meal %>
  </p>
 
  <p>
    <%= f.label :ingredients, 'Ingredients:' %><br>
    <%= f.text_area :ingredients %>
  </p>
 
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>